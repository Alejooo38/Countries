<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="countries.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout
            Padding="20,20,10,5">
            <Label
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Countries">
            </Label>
            <Image                
                Source="onu"
                WidthRequest="200">
            </Image>
            <Label                
                Text="E-mail">
            </Label>
            <Entry
                Keyboard="Email"
                Placeholder="Enter your email...">
            </Entry>
            <Label                
                Text="Password">
            </Label>
            <Entry
                IsPassword="True"
                Placeholder="Enter your password...">
            </Entry>
            <ActivityIndicator>
                
            </ActivityIndicator>

            <Button
                BackgroundColor="GreenYellow"
                BorderRadius="46"
                Text="Login"
                TextColor="White">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>